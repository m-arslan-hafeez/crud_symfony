{% extends 'base.html.twig' %}

{% set heading = "Products Management" %}
{% set sub_heading = "Create - Product" %}

{% block stylesheets %}
    <style>
        #client_status {
            height: 14px !important;
        }
    </style>
{% endblock %}

{% block title %}FM Packages ERP | Edit Contacts{% endblock %}
{% block body %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">{{ heading }}</h1>
                    </div><!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">{{ heading }}</a></li>
                            <li class="breadcrumb-item active">{{ sub_heading }}</li>
                        </ol>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Create Product
                                </h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                {{ form_start(form) }}

                                <div class="row">
                                    <div class="col-md-6 form-group">
                                        {{ form_label(form.name) }}
                                        {{ form_widget(form.name) }}
                                        <div class="error">
                                            {{ form_errors(form.name) }}
                                        </div>
                                    </div>

                                    <div class="col-md-6 form-group">
                                        {{ form_label(form.description) }}
                                        {{ form_widget(form.description) }}
                                        <div class="error">
                                            {{ form_errors(form.description) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 form-group">
                                        {{ form_label(form.price) }}
                                        {{ form_widget(form.price) }}
                                        <div class="error">
                                            {{ form_errors(form.price) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 form-group">
                                    </div>
                                    <div class="col-md-6 form-group">

                                        {{ form_widget(form.submit) }}

                                        <a  href="{{ path('app_product_create') }}" class=" btn btn-sm btn-default pull-right btn-flat" style="margin-right: 10px"
                                        >Back</a>
                                    </div>
                                </div>

                                {#{{ form_row(searchForm._token) }}#}
                                {{ form_end(form, {render_rest :true }) }}
                            </div>
                            <!-- /.card-body -->

                        </div>
                        <!-- /.card -->
                    </div>
                    <!-- /.col -->
                </div>
            </div><!--/. container-fluid -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

{% endblock %}
